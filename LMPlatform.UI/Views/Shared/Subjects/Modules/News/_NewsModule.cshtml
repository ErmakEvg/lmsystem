@model LMPlatform.UI.ViewModels.SubjectModulesViewModel.ModulesNewsViewModel

<div>
    @if (User.IsInRole("lector"))
    {
        <div id="navPanel">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div id="buttonActionSection">
                                <a id="addNewsButton" style="margin-right: 10px" href="@Url.Action("CreateNews","Subject", new {subjectId = Model.SubjectId})"><i class="fa fa-plus fa-2x"></i></a>
                                <a id="editNewsButton" style="margin-right: 10px" href="@Url.Action("EditNews","Subject")"><i class="fa fa-edit fa-2x"></i></a>
                                <a id="deleteNewsButton" href="#"><i class="fa fa-trash-o fa-2x"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="page-header" style="margin-top: 5px"></div>    
    }

    <div id="news">
        @if (!Model.News.Any())
        {
            <p>Новости отсутствуют</p>
        }

        <div class="panel-group" id="accordion">
            @{
                var href = 0;
            }
            @foreach (var news in Model.News)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#link_@href" class="collapsed" style="float: left">@news.Title</a>
                        </h4>
                        <p style="text-align: right">@news.DateCreate</p>
                        <div class="clear-fix"></div>
                    </div>
                    <div id="link_@href" class="panel-collapse collapse" style="height: 0px;">
                        <div class="panel-body">
                            @news.Body
                        </div>
                    </div>
                </div>
                href++;
            }    
        </div>
    </div>

</div>
