<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title LMP разработка</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/datatable-bootstrap.css">

    @Styles.Render("~/Content/bootstrap")
	@Styles.Render("~/Content/bootstrapcontrols")
    @Styles.Render("~/Content/css")

    @RenderSection("css", false)

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/shared")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrapcontrols")

    @RenderSection("headScripts", false)
</head>
<body>
    <header>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header" style="margin-top: 10px">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">LMPlatform</a>
                </div>
                <div class="navbar-collapse collapse navbar-inverse-collapse" style="margin-top: 10px">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Система управления учебным процессом", "Index","Lms")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Дополнительные модули <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Система управления ошибками", "Projects","BTS")</li>
                                <li>@Html.ActionLink("Тестирование знаний", "Index","KnowledgeTesting")</li>
                                <li><a href="#">Методические материалы</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-left">
                        <input type="text" class="form-control col-lg-8 search" placeholder="Поиск">
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </header>

    @RenderSection("featured", required: false)
    @RenderSection("specificScripts", required: false)
    <div id="body">
        @RenderSection("scripts", false)
        @RenderSection("body", false)
    </div>

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>
                    &copy; @DateTime.Now.Year - LMP разработка
                </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootbox")
</body>
</html>
