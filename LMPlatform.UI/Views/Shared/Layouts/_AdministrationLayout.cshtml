<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title Аднимистрирование LMP разработка</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/datatable-bootstrap.css">
    <link rel="stylesheet" href="/Content/popup.css">

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/bootstrapcontrols")
    @Styles.Render("~/Content/css")

    @RenderSection("css", false)

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/shared")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrapcontrols")

    @RenderSection("headScripts", false)
    <script src="~/Scripts/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="~/Scripts/application/Administration/administrationManagement.js" type="text/javascript"></script>
</head>
<body>
    <div class="content-wrapper-fix">
        <header>
            <div class="navbar navbar-inverse">
                <div>
                    <div class="navbar-collapse collapse navbar-inverse-collapse" style="margin-top: 10px">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Главная", "Index", "Administration")</li>
                            <li>@Html.ActionLink("Cтуденты", "Students", "Administration", new { id = string.Empty }, null)</li>
                            <li>@Html.ActionLink("Преподаватели", "Professors", "Administration")</li>
                            <li>@Html.ActionLink("Группы", "Groups", "Administration")</li>
                            <li>@Html.ActionLink("Файлы", "Files", "Administration")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        @RenderSection("featured", required: false)
        @RenderSection("specificScripts", required: false)
        <div id="body">
            @RenderSection("scripts", false)
            @RenderBody()
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>
                        &copy; @DateTime.Now.Year - Администрирование LMP разработка
                    </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/bootbox")
    </div>
</body>
</html>
