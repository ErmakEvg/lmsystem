@if (Request.IsAuthenticated)
{
	<text >
		<span class="navbar-text">Здравствуйте,
		@Html.ActionLink(User.Identity.Name, "Management", "Account", routeValues: null, htmlAttributes: new {@class = "username", title = "Личный кабинет"})
		@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
		{
			@Html.AntiForgeryToken()
			<a style="color: white" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
		}
             </span>
	</text>
}
else
    {
        <text >
            <span class="navbar-text">
                @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })    
                @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            </span>
        </text>
    }



