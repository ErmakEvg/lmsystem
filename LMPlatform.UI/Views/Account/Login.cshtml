@model LMPlatform.UI.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход в систему";
    Layout = "~/Views/Shared/_LimitLayout.cshtml";
}

@using (Html.BeginForm(new { ViewBag.ReturnUrl }))
{
    <div class="error-limit-login">
        @Html.ValidationSummary("Ошибка!", new { @class = "alert alert-error" })    
    </div>
    
    @Html.AntiForgeryToken()

    <div id="login" class="hero-unit center">
        <div style="text-align: center; margin-bottom: 20px">
            <h1>LMPlatform</h1>
        </div>
        <div>
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div>
                @Html.TextBoxFor(m => m.UserName,new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.UserName, " ")
            </div>
            <p></p>
        </div>
        <div>
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div>
                @Html.PasswordFor(m => m.Password,new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Password, " ")
            </div>
            <p></p>
        </div>
        <div>
            <label class="checkbox">@Html.CheckBoxFor(m => m.RememberMe) Запомнить</label>
            <input type="submit" class="btn btn-primary" value="Войти" />
            <p></p>
        </div>
        <div class="registration">
            <p>
                <a href=@Url.Action("Register")>
                    <strong>Зарегистрироваться?</strong>
                </a>
                <span>—</span>
                <a href="#">Восстановить пароль?</a>
            </p>
        </div>

    </div>
    <div style="text-align: center; padding-top: 10px">
        <span id="copyright">Copyright © 2013 BNTU. All rights reserved.</span>
    </div>
}
