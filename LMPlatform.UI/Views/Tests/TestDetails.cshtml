@{
    Layout = "~/Views/Shared/_BootBoxTemplate.cshtml";
}
@section title
{
    <h4 class="modal-title" id="myModalLabel" data-bind="text: testsDetails.formatTitle()"></h4>
}
@section content{
    <div class="form-group">
        <label for="inputEmail" class="col-lg-3 control-label">Название теста:</label>
        <div class="col-lg-9">
            <input type="text" class="form-control input-sm" id="inputEmail" data-bind="value: Title">
        </div>
    </div>
    <div class="form-group">
        <label for="textArea" class="col-lg-3 control-label">Описание:</label>
        <div class="col-lg-9">
            <textarea class="form-control input-sm" rows="3" id="textArea" data-bind="value:Description"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="textArea" class="col-lg-3 control-label" data-bind="text: testsDetails.getTextForTimeLabel()"></label>
        <div class="col-lg-9">
            <input class="form-control input-sm" type="number" data-bind="value:TimeForCompleting" />
        </div>
        <div class="col-lg-9 col-lg-offset-3">
            <div class="checkbox">
                <label>
                    <input type="checkbox" data-bind="checked: SetTimeForAllTest">
                    Задать время на весь тест
                </label>
            </div>
        </div>
    </div>
}
@section footer {
    <button type="button" id="cancelButton" class="btn btn-primary btn-sm" data-dismiss="modal">Отмена</button>
    <button type="button" id="saveButton" class="btn btn-primary btn-sm">Сохранить</button>
}

