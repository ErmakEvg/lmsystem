@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@{
    ViewBag.Title = "Управление предметами";
    Layout = "~/Views/Shared/Layouts/_MainUsingNavLectorLayout.cshtml";
}

@section scripts{
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundle/subjectManagement")
}

@section navpanel
{
    Управление предметами
}

@section navleft
{
    <li><a href="@Url.Action("Subjects","Subject")" class="linkNavbar"><i class="fa fa-desktop fa-1x"></i> Все предметы</a></li>
    <li><a href="#" class="linkNavbar"><i class="fa fa-desktop fa-1x"></i> Предметы</a></li>
    <li><a href="#" class="linkNavbar"><i class="fa fa-desktop fa-1x"></i> Предметы</a></li>
    <li><a href="@Url.Action("Index","Lms")" class="linkNavbar"><i class="fa fa-arrow-left fa-1x"></i> Система управления учебным процессом</a></li>
}

<div style="margin: 20px">
    <div id="buttonActionSection">
        <a href="@Url.Action("Create", "Subject")" class="addSubject" data-toggle="tooltip"><i class="fa fa-plus-circle fa-2x"></i></a>
    </div>
    <div>
        @Html.Partial("_DataTable", new DataTableViewModel
        {
            DataTable = Html.DataTable("subjectList", (SubjectController controller) => controller.GetSubjects(null)),
            DataTableOptions = new DataTableOptions
            {
                Filterable = true,
                Info = true,
                OnComplete = "subjectManagement.subjectEditItemActionHandler",
                Pagination = true,
                Searchable = true,
                Sortable = false,
                
            }
        })    
    </div>
    
</div>

