@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@{
    ViewBag.Title = "Управление предметами";
    Layout = "~/Views/Shared/Layouts/_MainUsingNavLayout.cshtml";
}

@section scripts{
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundle/subjectManagement")
}

@section headerTitle
{
	<h1>Управление предметами</h1>
}

@section navleft
{
    <li><a href="@Url.Action("Index","Lms")" class="linkNavbar"><i class="fa fa-arrow-left"></i> Назад</a></li>
}
<style>
    #subjectList th:first-child {
        width: 80%
    }

    #subjectList th:first-child + th {
        width: 20px;
    }

        #subjectList th:last-child{
            width: 10px;
            text-align: center
        }
    #subjectList td:first-child {
        text-align: left;
    }
    #subjectList th:first-child {
        text-align: left;
    }
</style>
<div ng-app="SubjectApp" ng-controller="ManagementController" ng-init="init()">
	
	<div id="buttonActionSection" style="margin-bottom: 15px">
		<a href="@Url.Action("Create", "Subject")" class="addSubject btn btn-primary btn-sm" data-toggle="tooltip">Добавить предмет</a>
	</div>
	
	<table class="table table-bordered table-responsive">
		<thead>
			<tr>
				<th>Название предмета</th>
				<th>Аббревиатура</th>
				<th>Действие</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeats="data in subjects">
				<td>
					<a href="@Url.Action("Index", "Subject")?subjectId={{data.subjectId}}">{{data.Name}}</a>"	
				</td>
				<td>
					{{data.ShortName}}
				</td>
				<td>
					<div style="text-align: center; width: 90px;">
						<a class="editSubjectAction" style="margin-right: 10px" href="@Url.Action("EditSubject", "Subject")?id={{data.subjectId}}"><i class="editSubject fa fa-edit fa-2x"></i></a>
						<a class="deleteSubjectButton" href="@Url.Action("DeleteSubject", "Subject")?id={{data.subjectId}}"><i class="deleteSubject fa fa-trash-o fa-2x"></i></a>
					</div>
				</td>
			</tr>
		</tbody>
	</table>
</div>


