@{
    Layout = "~/Views/Shared/_BootBoxTemplate.cshtml";
}

@section title
{
    <div class="modal-title" style="font-size: 14px;">Вопрос</div>
}
@section content{

    <label for="inputEmail" class="control-label">Текст вопроса:</label>
    <input type="text" data-bind="value: Title" placeholder="Текст вопроса" class="form-control input-sm" id="inputEmail">
    <label for="taskArea" class="сontrol-label">Задание к вопросу:</label>
    <textarea class="form-control input-sm" rows="2" id="taskArea"></textarea>

    <div class="row">
        <h5 style="margin-left: 15px;">Ответы</h5>
        <hr  style="margin-left: 15px;"/>
        <div class="row navbar col-lg-6" style="margin-left: 0">
            <a href="#" id="addNewVariant" class="btn btn-primary btn-sm">
                Добавить ответ
            </a>
        </div>
    </div>
    <div style="padding-right: 15px;" data-bind="template: { name: templateName, foreach: Answers }"></div>

    <div class="form-group">

        <label for="complexityLevel" style="margin-top: 10px" class="control-label col-lg-3 col-lg-offset-6">Уровень сложности:</label>
        <div class="col-lg-3">
            <input id="complexityLevel" class="form-control input-sm" type="number" data-bind="value:ComplexityLevel" />
        </div>
    </div>

}

@section footer {
    <button type="button" id="cancelButton" class="btn btn-primary btn-sm" data-dismiss="modal">Отмена</button>
    <button type="button" id="saveButton" class="btn btn-primary btn-sm">Сохранить</button>
}

