@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@model LMPlatform.UI.ViewModels.BTSViewModels.BugListViewModel

@{
    ViewBag.Title = "Управление ошибками";
}

@section css
{
    <link rel="stylesheet" href="/Content/chosen/chosen.css">
    <link rel="stylesheet" href="/Content/Site.css">
}

@section scripts
{
    @Scripts.Render("~/bundles/datatable")
    <script src="~/Scripts/application/BTS/bug.js" type="text/javascript"></script>
}

@section navleft
{
    @Html.Partial("_BTSSubnavbar")
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title" align="center">Управление ошибками</h2>
    </div>
</div>
<div>
    <div id="buttonActionSection">
        <a href="#" class="bugButton btn btn-primary btn-sm" data-url="@Url.Action("DocumentBug", "BTS")" data-toggle="tooltip">Документировать ошибку</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div>
            @Html.Partial("_DataTable", new DataTableViewModel
                    {
                        DataTable = Html.DataTable("aBugList", (BTSController controller) => controller.GetAllBugs(null)),
                        DataTableOptions = new DataTableOptions
                            {
                                Filterable = true,
                                Info = true,
                                OnComplete = null,
                                Pagination = true,
                                Searchable = true,
                                Sortable = false,
                            }
                    })
        </div>
</div>
</div>
