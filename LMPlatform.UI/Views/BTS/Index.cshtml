@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@model LMPlatform.UI.ViewModels.BTSViewModels.ProjectListViewModel

@{
    ViewBag.Title = "Проекты";
}

@section css
{
    <link rel="stylesheet" href="/Content/chosen/chosen.css">
}

@section scripts
{
    @Scripts.Render("~/bundles/datatable")
    <script src="~/Scripts/application/BTS/project.js" type="text/javascript"></script>
}

@section navleft
{
    @Html.Partial("_BTSSubnavbar")
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title" align="center">Проекты</h2>
    </div>
</div>
<div>
    <div id="buttonActionSection">
        <a href="#" class="projectButton btn btn-primary btn-sm" data-url="@Url.Action("AddProject", "BTS")" data-toggle="tooltip">Добавить проект</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tab-pane active" id="allProjects">
            <div style="margin: 10px">
                @Html.Partial("_DataTable", new DataTableViewModel
                {
                        DataTable = Html.DataTable("aProjectsList", (BTSController controller) => controller.GetProjects(null)),
                        DataTableOptions = new DataTableOptions
                        {
                            Filterable = true,
                            Info = true,
                            OnComplete = null,
                            Pagination = true,
                            Searchable = true,
                            Sortable = false,
                        }
                })
            </div>
        </div>
    </div>
</div>
