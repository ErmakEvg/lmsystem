@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/Layouts/_MainUsingNavLectorLayout.cshtml";
}


@section scripts
{
    @Scripts.Render("~/bundles/datatable", "~/bundles/knockoutBundles")
    @Scripts.Render("~/Scripts/application/KnowledgeTesting/TestsListScript.js",
                "~/Scripts/application/KnowledgeTesting/TestDetailsScript.js")
}

@section navpanel
{
    @string.Format("{0}: Доступные тесты", ViewBag.SubjectName)
}

@section navleft
{
    <li><a href="@Url.Action("TestsList", "TestsManagement")" class="linkNavbar"><i class="fa fa-pencil-square-o fa-1x"></i> &nbsp; Тесты</a></li>
    <li><a href="@Url.Action("TestResults", "TestsManagement")" class="linkNavbar"><i class="fa fa-tasks fa-1x"></i> &nbsp; Результаты</a></li>
}


<div style="margin: 20px">

    <input type="button" id="addNewTestButton" value="Добавить" class="addSubject btn btn-primary btn-sm" />

    <div>
        @Html.Partial("_DataTable", new DataTableViewModel
    {
        DataTable = Html.DataTable("testsList", (TestsManagementController controller) => controller.GetTestsList(null)),
        DataTableOptions = new DataTableOptions
        {
            Filterable = true,
            Info = true,
            OnComplete = null,
            Pagination = true,
            Searchable = true,
            Sortable = false,
        }
    })
    </div>
</div>

<div class="modal fade" style="width: 100%" id="testDetails" aria-hidden="true">
    @Html.Partial("TestDetails")
</div>
