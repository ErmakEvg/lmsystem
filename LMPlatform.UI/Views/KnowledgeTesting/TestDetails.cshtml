<div class="modal fade" style="width: 100%" id="testDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header navbar navbar-inverse">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel" data-bind="text: testsDetails.formatTitle()"></h4>
      </div>
      <div class="modal-body">
              <form class="form-horizontal">
                      <div class="form-group">
                          <label for="inputEmail" class="col-lg-3 control-label">Название теста:</label>
                          <div class="col-lg-9">
                              <input type="text" class="form-control" id="inputEmail" placeholder="Email" data-bind="value: Title">
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="textArea" class="col-lg-3 control-label">Описание:</label>
                          <div class="col-lg-9">
                              <textarea class="form-control" rows="3" id="textArea" data-bind="value:Description"></textarea>
                          </div>
                      </div>
                  <div class="form-group">
                       <label for="textArea" class="col-lg-3 control-label" data-bind="text: testsDetails.getTextForTimeLabel()"></label>
                          <div class="col-lg-9">
                              <input class="form-control" type="number" data-bind="value:TimeForCompleting"/>
                          </div>
                      <div class="col-lg-9 col-lg-offset-3">
                          <div class="checkbox">
                        <label>
                            <input type="checkbox" data-bind="checked: SetTimeForAllTest">
                            Задать время на весь тест
                        </label>
                      </div>
                      </div>
                  </div>
              </form>
          </div>
      <div class="modal-footer">
        <button type="button" id="cancelButton" class="btn btn-primary" data-dismiss="modal">Отмена</button>
        <button type="button" id="saveButton" class="btn btn-primary">Сохранить</button>
      </div>
    </div>
  </div>
</div>
